{
  "name": "@robb_j/chowchow",
  "version": "0.9.0",
  "description": "A modular express wrapper for typescript",
  "author": "Rob Anderson (https://r0b.io)",
  "repository": "robb-j/chowchow",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.js",
  "scripts": {
    "build": "tsc",
    "lint": "tsc --noEmit",
    "coverage": "jest --coverage",
    "prettier": "prettier --write '**/*.{js,json,css,md,ts,tsx}'",
    "preversion": "npm run test -s && npm run build",
    "test": "jest"
  },
  "keywords": [
    "express",
    "typescript",
    "modular",
    "chowchow"
  ],
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "valid-env": "^1.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.7",
    "@types/supertest": "^2.0.10",
    "supertest": "^4.0.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
