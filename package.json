{
  "name": "@robb_j/chowchow-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "A modular express wrapper for typescript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "npx tsc --noEmit",
    "coverage": "jest --coverage",
    "preversion": "npm test -s && npm run build",
    "prettier": "prettier --write '**/*.{js,json,css,md,ts,tsx}'",
    "test": "jest",
    "gen:toc": "md-toc -if '{README.md,packages/*/README.md}'"
  },
  "author": "Rob Anderson (https://r0b.io)",
  "repository": "robb-j/chowchow",
  "license": "MIT",
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "projects": [
      "packages/*"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "devDependencies": {
    "@robb_j/md-toc": "^0.3.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.12",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lerna": "^3.18.2",
    "lint-staged": "^9.0.2",
    "prettier": "1.18.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.5.2"
  }
}
