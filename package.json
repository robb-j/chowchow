{
  "name": "@robb_j/chowchow",
  "version": "0.5.1",
  "description": "A modular express wrapper for typescript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "npx tsc --noEmit",
    "coverage": "jest --coverage",
    "preversion": "npm test -s && npm run build && git add dist",
    "prettier": "prettier --write ./**/*.{js,ts,tsx,json,css,md}",
    "start": "node -r dotenv/config dist/index.js",
    "test": "jest",
    "dev:once": "ts-node -r dotenv/config src/index.ts",
    "dev:watch": "nodemon -w src -e ts -x 'npx ts-node -r dotenv/config' src/index.ts"
  },
  "keywords": [
    "express",
    "typescript",
    "modular",
    "chowchow"
  ],
  "author": "Rob Anderson (https://r0b.io)",
  "repository": "robb-j/chowchow",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "dependencies": {
    "express": "^4.16.4",
    "stoppable": "^1.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.12",
    "@types/node": "^10.12.12",
    "@types/stoppable": "^1.1.0",
    "@types/supertest": "^2.0.7",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.7",
    "prettier": "1.15.3",
    "supertest": "^3.4.2",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2"
  }
}
