{
  "name": "chowchow",
  "version": "0.0.0",
  "description": "A modular express wrapper for typescript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "coverage": "jest --coverage",
    "preversion": "npm test -s && tsc && git add dist",
    "prettier": "prettier --write ./**/*.{js,ts,tsx,json,css,md}",
    "start": "node -r dotenv/config dist",
    "test": "jest"
  },
  "keywords": [
    "express",
    "typescript",
    "modular"
  ],
  "author": "Rob Anderson (https://r0b.io)",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "express": "^4.16.4"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.12",
    "@types/node": "^10.12.12",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.7",
    "prettier": "1.15.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2"
  }
}
